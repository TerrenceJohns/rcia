<Page class="page"
    navigatingTo="onNavigatingTo"
    xmlns="http://www.nativescript.org/tns.xsd">
    
    <ActionBar class="action-bar">
        <!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Douay-Rheims Bible"></Label>
    </ActionBar>
    <TabView id="tabViewContainer">
    <TabViewItem title="Old Testament"  >
        <StackLayout id="ltOTStack" class="page-content p-t-30"  >
        <Label class="page-centertext bold" textWrap="true" text="Contents"  ></Label>
        <StackLayout class="hr-light"  />
        <ListView id="lstOTBooks" items="{{ otbooks }}" 
            pinch="onPinch" 
          separatorColor="blue" 
          class="list-group" itemTap="onItemTap"  >
            <ListView.itemTemplate >
                <!-- The item template can only have a single root view container (e.g. GriLayout, StackLayout, etc.) -->
                <StackLayout class="list-group-item" >
                    <Label text="{{ Name }}" textWrap="True" class="title" fontSize="22"/>
                    <Repeater id="rptChapters" 
                        items="{{ chapters }}" 
                        visibility="{{ visible }}" >
                        <Repeater.itemsLayout>
                            <WrapLayout orientation="horizontal" />                            
                        </Repeater.itemsLayout>
                        <Repeater.itemTemplate  >
                            <Button text="{{'[' +  $value + ']' }}" width="100" 
                            height="50" class="pre" onTap="onChapterTap" fontSize="18" />
                        </Repeater.itemTemplate>
                    </Repeater>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
        <ActivityIndicator id="myIndicator" busy="{{ isLoading }}" />
    </StackLayout>
    </TabViewItem>
    <TabViewItem title="New Testment" >
    <StackLayout id="ltNTStack" class="page-content p-t-30"  >
        <Label class="page-centertext bold" textWrap="true" text="Contents"  ></Label>
        <StackLayout class="hr-light"  />
        <ListView id="lstNTBooks" items="{{ ntbooks }}" 
            pinch="onPinch" 
          separatorColor="blue" 
          class="list-group" itemTap="onItemTap"  >
            <ListView.itemTemplate >
                <!-- The item template can only have a single root view container (e.g. GriLayout, StackLayout, etc.) -->
                <StackLayout class="list-group-item" >
                    <Label text="{{ Name }}" textWrap="True" class="title" fontSize="22"/>
                    <Repeater id="rptChapters" 
                        items="{{ chapters }}" 
                        visibility="{{ visible }}" >
                        <Repeater.itemsLayout>
                            <WrapLayout orientation="horizontal" />                            
                        </Repeater.itemsLayout>
                        <Repeater.itemTemplate  >
                            <Button text="{{'[' +  $value + ']' }}" width="100" 
                            height="50" class="pre" onTap="onChapterTap" fontSize="18" />
                            
                        </Repeater.itemTemplate>
                    </Repeater>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
       
    </StackLayout>

    </TabViewItem>
    </TabView>

   

    
</Page>